
<p class="notice"><%= notice %></p>

<h1>Product Categories</h1>

<table>
  <tr>
    <th>SKU</th>
    <th>name</th>
    <th>description</th>
    <th>actions</th>
  </tr>

<% @product_categories.each do |cat| %>
  <tr>
    <td><%= cat.sku %></td>
    <td><%= cat.name %></td>
    <td><%= cat.description %></td>
    <td><%= link_to 'Show', cat %>
        <%= link_to 'Edit', edit_product_category_path(cat) %>
        <%= button_to 'Delete', product_category_path(cat), method: :delete, 
        data: {  turbo_confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Category', new_product_category_path %>